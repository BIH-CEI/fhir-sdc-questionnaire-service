HAPI_CORS_ALLOWED_ORIGIN=*
HAPI_CORS_ALLOW_CREDENTIALS=true
HAPI_DEFAULT_PAGE_SIZE=20
HAPI_MAX_PAGE_SIZE=200

# FastAPI Configuration
FHIR_BASE_URL=http://hapi-fhir:8080/fhir
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=info

